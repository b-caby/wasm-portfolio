<div class="header-bar">
    <div class="header-section">
        <span>@ApplicationName</span>
    </div>

    <div class="header-button">
        <button @onclick="Toggle">Hello</button>
    </div>
</div>

<div class=@($"navigation-bar {ClassName}")>
    <NavigationBar @bind-Toggled=isToggled Items="@Items" />
</div>


@code {
    private bool isToggled { get; set; }
    private string ClassName => isToggled ? "toggled" : string.Empty;
    private void Toggle() => isToggled = !isToggled;
    private IReadOnlyList<NavigationBarItem> Items = new List<NavigationBarItem>
    {
        new NavigationBarItem() { Title="Home", Hyperlink="/" },
        new NavigationBarItem() { Title="Articles", Hyperlink="/counter" },
    };

    /// <summary>
    /// Gets or sets the header name.
    /// </summary>
    [Parameter]
    public string ApplicationName { get; set; } = string.Empty;
}