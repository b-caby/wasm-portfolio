<div class="header-bar">
    <div class="header-section">
        <NavLink class="home-link" href="">
            <div class="symbol"></div>
            <span class="name">Juliana Tavora</span>
        </NavLink>
    </div>

    <div style="display:flex;">
        <div class=@($"navigation-bar {ClassName}")>
            <NavigationBar @bind-Toggled=Toggled Items="@Items" />
        </div>

        <div class="header-button-section">
            <button class="header-button" @onclick=Toggle>
                @if (Toggled)
                {
                    <CloseIcon />
                }
                else
                {
                    <MenuIcon />
                }
            </button>
        </div>
    </div>

</div>

@if (Toggled)
{
    <div class="overlay" @onclick=Toggle></div>
}

@code {
    private bool Toggled { get; set; }
    private string ClassName => Toggled ? "toggled" : string.Empty;
    private string ButtonName => Toggled ? "Close" : "Open";
    private void Toggle() => Toggled = !Toggled;

    private List<NavigationBarItem> Items = new()
    {
        new() { Title = "ABOUT ME", Hyperlink = "" },
        new() { Title = "RESUME", Hyperlink = "resume" },
        new() { Title = "ARTICLES", Hyperlink = "articles" },
    };
}